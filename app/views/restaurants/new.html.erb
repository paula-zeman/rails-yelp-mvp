<div style="margin: 24px;">

<%= simple_form_for [ @restaurant ] do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
<%= f.input :phone_number %>
<%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
</div>
